<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

  <TextView
    android:id="@+id/StartTimeValue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingBottom="@dimen/ColumnHeaderPaddingHorizontal"
    android:paddingEnd="@dimen/ActivityPaddingVertical"
    android:paddingLeft="@dimen/ColumnHeaderPaddingVertical"
    android:paddingRight="@dimen/ActivityPaddingVertical"
    android:paddingStart="@dimen/ActivityPaddingVertical"
    android:paddingTop="@dimen/ColumnHeaderPaddingHorizontal"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

  <View
    android:layout_width="2dp"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"/>

  <TextView
    android:id="@+id/EndTimeValue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingBottom="@dimen/ColumnHeaderPaddingHorizontal"
    android:paddingEnd="@dimen/ActivityPaddingVertical"
    android:paddingLeft="@dimen/ColumnHeaderPaddingVertical"
    android:paddingRight="@dimen/ActivityPaddingVertical"
    android:paddingStart="@dimen/ActivityPaddingVertical"
    android:paddingTop="@dimen/ColumnHeaderPaddingHorizontal"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
</LinearLayout>