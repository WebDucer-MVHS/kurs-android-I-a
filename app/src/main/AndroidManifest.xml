<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.mvhs.android.zeiterfassung"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Berechtigungen -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Auflistungs- Activity -->
        <activity android:name=".TimeListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- Bearbeitungs- Activity -->
        <activity android:name=".EditActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <!-- Provider -->
        <provider
            android:name="db.TimelogProvider"
            android:authorities="de.mvhs.android.zeiterfassung.provider"
            android:enabled="true"
            android:exported="false">

        </provider>
    </application>

</manifest>
