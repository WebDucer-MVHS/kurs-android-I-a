<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/row_vertical_padding"
    android:paddingEnd="@dimen/row_horizontal_padding"
    android:paddingLeft="@dimen/row_horizontal_padding"
    android:paddingRight="@dimen/row_horizontal_padding"
    android:paddingStart="@dimen/row_horizontal_padding"
    android:paddingTop="@dimen/row_vertical_padding"
    android:weightSum="2">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center_horizontal"
      android:text="@string/ColumnHeaderStartTime"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textStyle="bold"/>

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center_horizontal"
      android:text="@string/ColumnHeaderEndTime"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textStyle="bold"/>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/horizontal_rule_height"
    android:background="@color/colorAccent"/>

  <ListView
    android:id="@+id/DataList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>